<Window x:Class="Course_BD.ProductCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="BrandWindow" MinHeight="150" MinWidth="300" Height="150" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.3*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Label Content="Назва:" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Height="31"
               Width="56" />
        <TextBox Name="NameBox" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0"
                 Grid.Column="1" Width="150" Height="23" />
        <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Grid.Column="0" Orientation="Horizontal" Margin="10,10,10,10"
                    HorizontalAlignment="Right">
            <Button Content="Скасувати" Click="Button_Click" Margin="5" FontSize="16" />
            <Button Content="OK" Click="Button_Click_1" Margin="5" Width="50" FontSize="16" />
        </StackPanel>
    </Grid>
</Window>